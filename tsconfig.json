{
    "compileOnSave": true,
    "compilerOptions": {
        //"noImplicitAny": true,
        "declaration": true,
        "outDir": "lib",
        //"strict": true,
        "module": "commonjs",
        "lib": [ "es2016", "dom" ],
        "sourceMap": true,
        "target": "es2016",
        "moduleResolution": "node",
        "allowJs": false,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "jsx": "react",
    },
    "include": [
        "src/*.ts",
        "src/*.tsx",
        "src/types/*.ts",
        "src/components/*.tsx",
        "src/styles/*.scss",
        "examples/src/*.ts",
        "examples/src/*.tsx",
        "examples/src/components/*.tsx",
        "examples/src/styles/*.scss",
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "src/old/*"
    ]
}