{
    "compileOnSave": true,
    "compilerOptions": {
        //"noImplicitAny": true,
        "declaration": true,
        "outDir": "lib",
        //"strict": true,
        "module": "amd",
        "sourceMap": true,
        "target": "es2016",
        "moduleResolution": "node",
        "allowJs": false,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "jsx": "react",
    },
    "include": [
        "src/*.ts",
        "src/*.tsx", 
        "src/types/*.ts", 
        "src/components/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "src/old/*"
    ]
}